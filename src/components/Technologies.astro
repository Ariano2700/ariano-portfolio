---
import type { TechI } from "@interfaces/TechInterface";
import Java from "@assets/icons/TechIcons/Backend/Java.svg?url";
import MySQL from "@assets/icons/TechIcons/Backend/MySQL.svg?url";
import NestJS from "@assets/icons/TechIcons/Backend/NestJs.svg?url";
import NodeJS from "@assets/icons/TechIcons/Backend/NodeJS.svg?url";
import PostgreSQL from "@assets/icons/TechIcons/Backend/PostgreSQL.svg?url";
import Python from "@assets/icons/TechIcons/Backend/Python.svg?url";

import Figma from "@assets/icons/TechIcons/Extras/Figma.svg?url";
import Firebase from "@assets/icons/TechIcons/Extras/Firebase.svg?url";
import Git from "@assets/icons/TechIcons/Extras/Git.svg?url";
import JWT from "@assets/icons/TechIcons/Extras/JWT.svg?url";
import Photoshop from "@assets/icons/TechIcons/Extras/Photoshop.svg?url";

import Javascript from "@assets/icons/TechIcons/Frontend/Javascript.svg?url";
import NextJS from "@assets/icons/TechIcons/Frontend/NextJS.svg?url";
import React from "@assets/icons/TechIcons/Frontend/React.svg?url";
import Tailwindcss from "@assets/icons/TechIcons/Frontend/Tailwindcss.svg?url";
import Typescript from "@assets/icons/TechIcons/Frontend/Typescript.svg?url";
import Html5 from "@assets/icons/TechIcons/Frontend/Html5.svg?url";
import Css3 from "@assets/icons/TechIcons/Frontend/Css3.svg?url";

const frontendTech: TechI[] = [
  {
    name: "HTML5",
    icon: Html5,
  },
  {
    name: "CSS3",
    icon: Css3,
  },
  {
    name: "Javascript",
    icon: Javascript,
  },
  {
    name: "NextJS",
    icon: NextJS,
  },
  {
    name: "React",
    icon: React,
  },
  {
    name: "Tailwind",
    icon: Tailwindcss,
  },
  {
    name: "Typescript",
    icon: Typescript,
  },
];

const backendTech: TechI[] = [
  {
    name: "Java",
    icon: Java,
  },
  {
    name: "MySQL",
    icon: MySQL,
  },
  {
    name: "NestJS",
    icon: NestJS,
  },
  {
    name: "NodeJS",
    icon: NodeJS,
  },
  {
    name: "Postgre",
    icon: PostgreSQL,
  },
  {
    name: "Python",
    icon: Python,
  },
];

const extrasTech: TechI[] = [
  {
    name: "Figma",
    icon: Figma,
  },
  {
    name: "Firebase",
    icon: Firebase,
  },
  {
    name: "Git",
    icon: Git,
  },
  {
    name: "JWT",
    icon: JWT,
  },
  {
    name: "Photoshop",
    icon: Photoshop,
  },
];
---

<div
  class="flex flex-col sm:flex-row items-center justify-center gap-7 text-base sm:text-2xl max-w-[1120px]"
>
  <div class="flex flex-col justify-center items-center gap-3 mb-3 w-full">
    <h2 class="text-3xl text-gradient">Frontend</h2>
    <ul
      id="frontend_tech"
      class="p-5 rounded-xl border dark:border-primary-5 border-primary-10 grid grid-cols-3 sm:grid-cols-4 w-full gap-10"
    >
      {
        frontendTech.map((tech) => (
          <li class="">
            <figure class="flex flex-col gap-2 items-center justify-center">
              <img
                src={tech.icon}
                alt={`Icono de ${tech.name}`}
                class="size-14"
              />
              <figcaption>{tech.name}</figcaption>
            </figure>
          </li>
        ))
      }
      <li class="">
        <figure class="flex flex-col gap-2 items-center justify-center">
          <img
            src="/DeviconAstro.webp"
            alt={`Icono de Astro`}
            class="size-14"
          />
          <figcaption>Astro</figcaption>
        </figure>
      </li>
    </ul>
  </div>
  <div class="flex flex-col justify-center items-center gap-3 mb-3 w-full">
    <h2 class="text-3xl text-gradient">Backend</h2>
    <ul
      id="frontend_tech"
      class="p-5 rounded-xl border dark:border-primary-5 border-primary-10 grid grid-cols-3 sm:grid-cols-4 w-full gap-10"
    >
      {
        backendTech.map((tech) => (
          <li class="">
            <figure class="flex flex-col gap-2 items-center justify-center">
              <img
                src={tech.icon}
                alt={`Icono de ${tech.name}`}
                class="size-14"
              />
              <figcaption>{tech.name}</figcaption>
            </figure>
          </li>
        ))
      }
    </ul>
  </div>
</div>
<div
  class="flex flex-col items-center justify-center gap-7 text-base sm:text-2xl max-w-[620px] mt-5"
>
  <div class="flex flex-col justify-center items-center gap-3 mb-3 w-full">
    <h2 class="text-3xl text-gradient-extras">Extras</h2>
    <ul
      id="frontend_tech"
      class="p-5 rounded-xl border dark:border-primary-5 border-primary-10 grid grid-cols-3 sm:grid-cols-4 w-full gap-10"
    >
      {
        extrasTech.map((tech) => (
          <li class="">
            <figure class="flex flex-col gap-2 items-center justify-center">
              <img
                src={tech.icon}
                alt={`Icono de ${tech.name}`}
                class="size-14"
              />
              <figcaption>{tech.name}</figcaption>
            </figure>
          </li>
        ))
      }
    </ul>
  </div>
</div>
<style>
  .text-gradient {
    background: linear-gradient(270deg, #00d5fbb7, #087599);
    background-size: 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-animation 2s infinite linear alternate;
  }
  .text-gradient-extras {
    background: linear-gradient(270deg, #fdb548, #c47909);
    background-size: 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-animation 2s infinite linear alternate;
  }

  @keyframes gradient-animation {
    0% {
      background-position: 0%;
    }
    100% {
      background-position: 100%;
    }
  }
</style>
