---
import themeStore from "@store/theme.store";
import "@styles/ToggleButton.css";
const { theme } = themeStore.getState();
---

<label id="changeTheme" class="switch cursor-pointer">
  <span class="sr-only">Cambiar tema</span>
  <input
    type="checkbox"
    class="toggleButtonClass"
    checked={theme === "light"}
    aria-label="Cambiar tema"
  />
  <span class="slider"></span>
  <img
    alt="Off"
    src="data:image/jpeg;base64,"
    class="off"
    title="Dark Mode"
    loading="eager"
  />
  <img
    alt="On"
    src="data:image/jpeg;base64,"
    class="on"
    title="Light Mode"
    loading="eager"
  />
</label>
<script>
  import themeStore from "@store/theme.store";
  document.addEventListener("DOMContentLoaded", () => {
    const { toggleTheme } = themeStore.getState();
    const savedTheme = localStorage.getItem("theme") || "light";
    document.documentElement.classList.add(savedTheme);
    const toggleButtons = document.querySelectorAll(".toggleButtonClass");

    toggleButtons.forEach((button) => {
      // Haz el casting para cada botón a HTMLInputElement
      const toggleButton = button as HTMLInputElement;
      toggleButton.checked = savedTheme === "light"; // Establecer el estado inicial

      toggleButton.addEventListener("change", () => {
        toggleTheme(); // Llamar a la función global
      });
    });
    // También puedes inicializar el tema aquí si es necesario
    document.documentElement.classList.add(savedTheme);
    window.addEventListener("themeChange", () => {
      const currentTheme = localStorage.getItem("theme");
      toggleButtons.forEach((button) => {
        const toggleButton = button as HTMLInputElement;
        toggleButton.checked = currentTheme === "light"; // Actualizar el estado del botón
      });
    });
  });
</script>
