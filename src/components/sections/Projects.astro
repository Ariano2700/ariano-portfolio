---
import InteractiveProjectCard from "@components/sections/components/projects/InteractiveProjectCard.astro";
import { projects, projectsEs } from "@const/projects";
const pathname = Astro.url.pathname;
const isEnglish = pathname.startsWith("/en");

const projectsData = isEnglish ? projects : projectsEs;
const titleLabel = isEnglish ? "Projects" : "Proyectos";
---

<div
  class="rubik_font text-white flex justify-start items-center p-5 flex-col"
  id="projects_section"
>
  <div
    class="flex flex-col md:flex-row md:justify-start md:items-center justify-center items-start w-full max-w-[1120px] mb-5"
  >
    <div class="flex flex-col justify-center">
      <h2 class="font-bold text-4xl text-start">
        {titleLabel}<span class="text-primary-10 dark:text-primary-5">: </span>
      </h2>
    </div>
  </div>
  <InteractiveProjectCard projects={projectsData} />
</div>
