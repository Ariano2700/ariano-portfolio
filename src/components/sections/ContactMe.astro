---
import MdiGithub from "@assets/icons/MaterialDesignIcons/MdiGithub.astro";
import MdiGmail from "@assets/icons/MaterialDesignIcons/MdiGmail.astro";
import MdiLinkedin from "@assets/icons/MaterialDesignIcons/MdiLinkedin.astro";
import ContactEmailSend from "@components/sectionsComponents/contactMe/ContactEmailSend.astro";
---

<div
  class="rubik_font text-white flex justify-start items-center p-5 flex-col"
  id="contact_section"
>
  <div
    class="flex flex-col min-[860px]:flex-row items-start justify-between gap-10 w-full max-w-[1120px]"
  >
    <div class="flex flex-col justify-center items-start">
      <h2 class="font-bold text-4xl">
        Contact<span class="text-primary-10 dark:text-primary-5">. </span>
      </h2>
      <div class="flex flex-col justify-center gap-3">
        <h3 class="text-lg font-medium italic">
          Let's work together!<span class="text-primary-10 dark:text-primary-5">
            :D
          </span>
        </h3>
        <p
          class="flex items-center gap-2 text-xl text-primary-10 dark:text-buttons-5"
        >
          <MdiGmail /> arianoalban2004@gmail.com
        </p>
        <ul class="flex gap-5 text-5xl text-white">
          <li>
            <a
              href="https://github.com/Ariano2700"
              target="_blank"
              aria-label="Profile GitHub"
              title="Profile GitHub"
            >
              <MdiGithub />
            </a>
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/ariano-selim-alban-gomez-073325332/"
              target="_blank"
              aria-label="Profile LinkedIn"
              title="Profile LinkedIn"
            >
              <MdiLinkedin />
            </a>
          </li>
        </ul>
      </div>
    </div>
    <ContactEmailSend />
  </div>
</div>
<style>
  li {
    @apply transition-all duration-300 ease-out hover:text-primary-10 dark:hover:text-buttons-5 flex items-center justify-center;
  }
</style>
