---
import WavingHand from "@assets/icons/WavingHand.astro";
import PeruFlag from "@assets/icons/Flags/PeruFlag.astro";
import EnglangFlag from "@assets/icons/Flags/EnglangFlag.astro";
import MdiGithub from "@assets/icons/MaterialDesignIcons/MdiGithub.astro";
import MdiLinkedin from "@assets/icons/MaterialDesignIcons/MdiLinkedin.astro";
import { Image } from "astro:assets";
import { techIcons } from "@const/techIcons";

const pathname = Astro.url.pathname;
const isEnglish = pathname.startsWith("/en");

const subtitleLabel = isEnglish
  ? "Hi, nice to meet you, I'm"
  : "Hola, un gusto conocerte, soy";
const titleLabel = isEnglish
  ? "Ariano Alban | Developer"
  : "Ariano Alban | Desarrollador";
const descriptionLabel = isEnglish
  ? "Programming what is imagined!"
  : "Â¡Programando lo que imagino!";
const resumeLabel = isEnglish ? "Resume" : "Curriculum";
---

<div
  class="flex flex-col-reverse sm:flex-row items-center justify-center gap-10 h-screen"
  id="presentation_section"
>
  <div
    class="flex items-center md:items-start justify-between flex-col gap-2 rubik_font"
  >
    <h2
      class="text-start flex gap-2 items-center text-xl font-normal text-white"
    >
      {subtitleLabel}
      <span>
        <WavingHand />
      </span>
    </h2>
    <h1 class="text-gradient text-3xl sm:text-4xl font-bold text-center">
      {titleLabel}
    </h1>
    <h2
      class="text-start flex gap-2 items-center text-xl font-normal text-white mt-4"
    >
      <i>{descriptionLabel}</i>
    </h2>
    <div
      class="flex flex-col gap-5 items-center md:items-start justify-center w-full mt-4"
    >
      <ul class="flex gap-5 items-center">
        <li>
          <a
            href="https://firebasestorage.googleapis.com/v0/b/portfolio-ariano.appspot.com/o/curriculum-vitae%2FCurriculum%20Vitae%20-%20Ariano%20Alban%20-%20ES.pdf?alt=media&token=f1f05ee2-6d28-48a5-8ed9-f1a153dde9e9"
            class="rounded-md border border-buttons-5 hover:bg-primary-10 dark:hover:bg-primary-5 transition-all duration-300 ease-out flex items-center gap-2 text-white p-3 text-base"
            target="_blank"
            aria-label="Resume in Spanish"
            title="Resume in Spanish"
            >{resumeLabel} <PeruFlag />
          </a>
        </li>
        <li>
          <a
            href="https://firebasestorage.googleapis.com/v0/b/portfolio-ariano.appspot.com/o/curriculum-vitae%2FCurriculum%20Vitae%20-%20Ariano%20Alban%20-%20EN.pdf?alt=media&token=0c13eb67-41ea-4d20-b7cb-5a63a7a90e19"
            class="rounded-md border border-buttons-5 hover:bg-primary-10 dark:hover:bg-primary-5 transition-all duration-300 ease-out flex items-center gap-2 text-white p-3 text-base"
            target="_blank"
            aria-label="Resume in English"
            title="Resume in English"
            >{resumeLabel} <EnglangFlag />
          </a>
        </li>
      </ul>
      <ul class="flex gap-5 text-5xl text-white">
        <li>
          <a
            href="https://github.com/Ariano2700"
            rel="noopener"
            target="_blank"
            aria-label="Ariano Alban Profile GitHub"
            title="Ariano Alban Profile GitHub"
          >
            <MdiGithub />
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/ariano-selim-alban-gomez-073325332/"
            target="_blank"
            aria-label="Ariano Alban Profile LinkedIn"
            title="Ariano Alban Profile LinkedIn"
          >
            <MdiLinkedin />
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div
    class="relative flex items-center justify-center w-48 h-48 sm:w-64 sm:h-64 mt-16 sm:mt-0"
  >
    <Image
      src="/ProfileImage.webp"
      alt="Profile Ariano Alban | Portfolio"
      width="192"
      height="300"
      class="rounded-full w-48 h-48 sm:w-64 sm:h-64 aspect-square z-10"
      loading="eager"
      title="Profile Ariano Alban | Portfolio"
    />
    <!-- Floating Tech Icons -->
    <Image
      src={techIcons["React"] as string}
      alt="React"
      class="floating-icon floating-icon-1"
      width="38"
      height="38"
      title={"React"}
      loading={"lazy"}
    />
    <Image
      src={techIcons["Astro"] as string}
      alt="Astro"
      class="floating-icon floating-icon-2"
      width="38"
      height="38"
      title={"Astro"}
      loading={"lazy"}
    />
    <Image
      src={techIcons["NodeJS"] as string}
      alt="NodeJS"
      class="floating-icon floating-icon-3"
      width="38"
      height="38"
      title={"NodeJS"}
      loading={"lazy"}
    />
    <Image
      src={techIcons["NestJS"] as string}
      alt="NestJS"
      class="floating-icon floating-icon-4"
      width="38"
      height="38"
      title={"NestJS"}
      loading={"lazy"}
    />
  </div>
</div>
<style>
  .text-gradient {
    background: linear-gradient(270deg, #00d6fb, #087599);
    background-size: 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-animation 5s infinite linear alternate;
  }

  @keyframes gradient-animation {
    0% {
      background-position: 0%;
    }
    100% {
      background-position: 100%;
    }
  }
  li {
    @apply transition-all duration-300 ease-out hover:text-primary-10 dark:hover:text-buttons-5 cursor-pointer;
  }
  /* Floating icons animation styles */
  .floating-icon {
    position: absolute;
    z-index: 20;
    filter: drop-shadow(0 2px 8px #0008);
    opacity: 0.95;
    transition: transform 0.3s;
  }
  .floating-icon-1 {
    top: -18px;
    left: 10%;
    animation: float1 4s ease-in-out infinite;
  }
  .floating-icon-2 {
    top: 20%;
    right: -18px;
    animation: float2 5s ease-in-out infinite;
  }
  .floating-icon-3 {
    bottom: -18px;
    left: 15%;
    animation: float3 4.5s ease-in-out infinite;
  }
  .floating-icon-4 {
    bottom: 10%;
    right: -16px;
    animation: float4 5.5s ease-in-out infinite;
  }
  @keyframes float1 {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-18px) scale(1.1);
    }
  }
  @keyframes float2 {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(16px) scale(1.08);
    }
  }
  @keyframes float3 {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-12px) scale(1.12);
    }
  }
  @keyframes float4 {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(14px) scale(1.07);
    }
  }
</style>
