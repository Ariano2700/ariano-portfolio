---
import { Image } from "astro:assets";
const pathname = Astro.url.pathname;
const isEnglish = pathname.startsWith("/en");
const titleLabel = isEnglish ? "Education" : "Educación";
const educationLabel = isEnglish
  ? "Computer and systems engineering"
  : "Ingeniería de sistemas";
const universityLabel = isEnglish
  ? "Universidad Tecnológica del Perú"
  : "Universidad Tecnologíca del Perú";
const dateLabel = isEnglish ? "2021 - Present" : "2021 - Presente";
---

<div
  class="rubik_font text-white flex justify-start items-center p-5 flex-col mt-5"
  id="education_section"
>
  <div
    class="flex flex-col md:flex-row justify-between items-center gap-10 w-full max-w-[1120px]"
  >
    <div class="flex flex-col justify-start items-start">
      <h2 class="font-bold text-4xl">
        {titleLabel}<span class="text-primary-10 dark:text-primary-5">. </span>
      </h2>
      <div class="flex items-center gap-2 px-2 mb-2">
        <div class="rounded-full bg-primary-10 dark:bg-primary-5 size-2"></div>
        <h4 class="font-light text-slate-100 text-xl">
          {educationLabel}
        </h4>
      </div>
      <div class="px-6">
        <p class="font-light text-slate-100 text-lg">
          <i> {universityLabel} </i>
        </p>
        <p class="text-balance font-light text-slate-100 text-lg">
          <i>{dateLabel}</i>
        </p>
      </div>
    </div>
    <Image
      height="240"
      width="240"
      src="/utp.png"
      alt="UTP Logo"
      class="sm:size-80 size-60 object-contain"
      loading="lazy"
      title="UTP Logo"
    />
  </div>
</div>
