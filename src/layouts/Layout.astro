      property="og:image"
      content="https://firebasestorage.googleapis.com/v0/b/portfolio-ariano.appspot.com/o/imagesProjects%2Fportfolio.PNG?alt=media&token=62cc0836-cf75-4e8e-8e7e-2977af4f916b"
    />
    <!-- Replace with your image URL -->
    <meta property="og:url" content="https://arianoalban.netlify.app/" />
    <!-- Replace with your website URL -->
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@27AAriano" />
    <meta
      name="twitter:description"
      content="Sigan en http://twitch.tv/ariano2700 pipipi
Hincha del (U)nico grande del futbol peruano💛❤️
Estudiante de Ing. Informática y sistemazzzz"
    />
    <meta
      name="twitter:image"
      content="https://firebasestorage.googleapis.com/v0/b/portfolio-ariano.appspot.com/o/foto%20-%20copia.PNG?alt=media&token=459b4fd2-90b3-424a-be84-a78a427d3b3e"
    />
  </head>

  <body class="bg-light bg-dark min-h-screen montserrat_font scroll-smooth">
    <Header />
    <main class="py-2 h-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap");
  .bg-light {
    @apply bg-gradient-to-br from-blue-600 to-cyan-700;
  }

  .bg-dark {
    @apply dark:bg-gradient-to-br dark:from-slate-500 dark:to-indigo-900;
  }
  .montserrat_font {
    font-family: "Montserrat", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }
  .rubik_font {
    font-family: "Rubik", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }
  body::-webkit-scrollbar {
    width: 6px; /* width of the entire scrollbar */
  }

  body::-webkit-scrollbar-track {
    background: #004e69; /* color of the tracking area */
  }

  body::-webkit-scrollbar-thumb {
    background-color: #00d6fb; /* color of the scroll thumb */
    border-radius: 20px; /* roundness of the scroll thumb */
    border: 1px solid #004e69; /* creates padding around scroll thumb */
  }
</style>
<script>
  import useThemeStore from "@store/theme.store";
  import type { ThemeState } from "@interfaces/ThemeType";

  document.addEventListener("DOMContentLoaded", () => {
    const savedTheme = localStorage.getItem("theme") || "light";
    useThemeStore.getState().setTheme(savedTheme as ThemeState["theme"]);
  });
</script>
